---
title: ~Reports
---
<div class="container mt-4">
  <h1><%= translate :Reports %></h1>

  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th scope="col">
          <%= translate :Year %>,
          <%= translate :month %>
        </th>
        <th scope="col">
          <%= translate :Seller_Source %>
        </th>
        <th scope="col">
          <%= translate :Amount %>
        </th>
        <th scope="col">
          <%= translate :Download %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% data.reports.sort_by { |report| [report[:year], report[:month]] }.reverse.each do |report| %>
        <tr>
          <td>
            <%= report[:year] %>,
            <%= translate('date.month_names')[report[:month]] %>
          </td>
          <td>
            <%= report[:party] %>
          </td>
          <td>
            <%= report[:amount] %>
          </td>
          <td>
            <%= link_to translate(:PDF), report[:download] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
