<% resources = sitemap.resources.select { |res| res.source_file =~ /\.html/ } %>
<% %>
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<% resources.each do |page| %>
  <url>
    <% if absolute_urls? %>
      <loc><%= absolute_url page.url %></loc>
    <% elsif page.url == '/' %>
      <loc><%= relative_root_path %></loc>
    <% else %>
      <loc><%= url_for page %></loc>
    <% end %>
  </url>
<% end %>
</urlset>
