<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1><%= translate :title %></h1>
    <p class="lead"><%= translate :description %></p>
  </div>
</div>

<div class="container">
  <div class="text-center">
    <% link_to external_link :telegram_channel do %>
      <i class="fab fa-telegram"></i>
      <%= translate :telegram_channel %>
    <% end %>
  </div>

  <div class="text-center">
    <% link_to external_link :telegram_chat do %>
      <i class="fab fa-telegram"></i>
      <%= translate :telegram_chat %>
    <% end %>
  </div>

  <div class="text-center">
    <% link_to external_link :youtube_channel do %>
      <i class="fab fa-youtube"></i>
      <%= translate :youtube_channel %>
    <% end %>
  </div>

  <div class="text-center">
    <% link_to external_link :peertube_channel do %>
      <i class="fas fa-tv"></i>
      <%= translate :peertube_channel %>
    <% end %>
  </div>

  <div class="text-center">
    <% link_to external_link :medium_blog do %>
      <i class="fab fa-medium"></i>
      <%= translate :medium_blog %>
    <% end %>
  </div>

  <div class="text-center">
    <% link_to external_link :publications_archive do %>
      <i class="fas fa-archive"></i>
      <%= translate :publications_archive %>
    <% end %>
  </div>

  <div class="text-center">
    <% link_to external_link :wiki do %>
      <i class="fab fa-wikipedia-w"></i>
      <%= translate :wiki %>
    <% end %>
  </div>

  <div class="text-center">
    <% link_to external_link :git do %>
      <i class="fab fa-git-alt"></i>
      <%= translate :git %>
    <% end %>
  </div>
</div>

<footer class="footer mt-auto py-3">
  <div class="container-fluid">
    <iframe data-aa="1194466"
            src="//acceptable.a-ads.com/1194466"
            scrolling="no"
            style="width:100%;height:100%;border:0px;padding:0;overflow:hidden"
            allowtransparency="true"></iframe>
  </div>
</footer>
