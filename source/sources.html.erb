---
title: ~Sources
description: ~_sources_description
---
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1><%= translate :Sources %></h1>
    <p class="lead"><%= translate :_sources_description %></p>
    <hr/>
    <p><%= translate :How_to_read %></p>
    <ul>
      <li><%= translate :_sources_rss_atom %></li>
      <li><%= translate :_sources_telegram %></li>
      <li><%= translate :_sources_hacker_news %></li>
      <li><%= translate :_sources_cve %></li>
    </ul>
  </div>
</div>

<div class="container mb-4">
  <button id="sources-button-rss-atom" type="button" class="btn btn-secondary" disabled data-state="none">
    <%= translate :RSS_and_or_Atom %>
  </button>

  <button id="sources-button-telegram" type="button" class="btn btn-secondary" disabled data-state="none">
    <%= translate :Telegram %>
  </button>

  <button id="sources-button-twitter" type="button" class="btn btn-secondary" disabled data-state="none">
    <%= translate :Twitter %>
  </button>

  <% data.sources.sort_by(&:title).each do |source| %>
    <div id="source-<%= source.id %>" class="mt-4">
      <div class="card">
        <div class="row no-gutters">
          <% if source.image_ext %>
            <div class="col-md-2">
              <%= image_tag "sources/#{source.id}.#{source.image_ext}",
                            class: 'card-img-top',
                            alt: source.title %>
            </div>
          <% end %>

          <div class="col-md-10">
            <div class="card-body">
              <h5 class="card-title">
                <%= source.title %>
              </h5>

              <% source.links.each do |link| %>
                <%= link_to link.title || link.url,
                            link.url,
                            class: 'card-link' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
