<% wrap_layout :layout do %>
  <div class="container mt-4 mb-5">
    <h1><%= current_page.title %></h1>

    <p>
      <%= partial 'blog/date_and_tags',
                  locals: { date: current_page.date,
                            tags: current_page.tags } %>
    </p>

    <article class="cl-blog-article mt-5">
      <%= yield %>
    </article>
  </div>
<% end %>
